<%= render 'shared/menu' %>

<% class_name = @class.model_name.human.titleize %>
<h1>Listing <%= class_name.pluralize %></h1>
<table>
<% @objects.sort_by{|obj| obj.name}.each do |object| %>
  <tr>
    <td><%= link_to object.name, action: 'show', id: object.id %></td>
    <td><%= link_to 'Edit', action: 'edit', id: object.id %></td>
    <td><%= link_to 'Destroy', {action: 'destroy', id: object.id}, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to "New #{class_name}", action: 'new' %>